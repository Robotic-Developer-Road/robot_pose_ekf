<launch>

  <arg name="odom_sub_topic" default="odom"/>
  <arg name="imu_sub_topic" default="imu"/>
  <arg name="vo_sub_topic" default="vo"/>
  <arg name="gps_sub_topic" default="gps"/>

  <node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf">

    <!-- a series of odom subscribed by -->
    <param name="odom_sub_topic" value="$(arg odom_sub_topic)"/>   
    <param name="imu_sub_topic" value="$(arg imu_sub_topic)"/>
    <param name="vo_sub_topic" value="$(arg vo_sub_topic)"/>
    <param name="gps_sub_topic" value="$(arg gps_sub_topic)"/>

    <param name="output_frame" value="odom"/>
    <param name="base_footprint_frame" value="base_footprint"/>
    <param name="freq" value="30.0"/>
    <param name="sensor_timeout" value="1.0"/>  
    <param name="odom_used" value="true"/>
    <param name="imu_used" value="true"/>
    <param name="vo_used" value="false"/>
    <param name="debug" value="true"/>
    <param name="self_diagnose" value="false"/>
    <remap from="odom" to="/odom" />
  </node>

</launch>
